{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"types": [
			"vite/client",
			"jest",
			"node"
		],
		"sourceMap": true,
		"strict": true,
		"module": "esnext",
		"target": "esnext",
		"esModuleInterop": true,
		"lib": [
			"esnext",
			"dom"
		],
		"moduleResolution": "Node",
		"plugins": [
			{
				"name": "@vuedx/typescript-plugin-vue"
			}
		],
		"include": [
			"src/views",
			"src/shims-vue.d.ts"
		]
	},
	"include": [
		"**/*.js",
		"**/*.ts",
		"**/*.d.ts",
		"**/*.vue"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
